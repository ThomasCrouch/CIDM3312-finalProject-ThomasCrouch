@page
@model finalProject_ThomasCrouch.Pages.AddPrisonerModel

@{
    ViewData["Title"] = "Add Review";
}

<h1>Add a Prisoner to a Prison</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Prisoner.PrisonID" class="control-label">Prison</label>
                <select asp-for="Prisoner.PrisonID" asp-items="Model.PrisonsDropDown" class="form-control">
                    <option value="">--Select Prison--</option> 
                </select>
                <span asp-validation-for="Prisoner.PrisonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prisoner.PrisonerName" class="control-label"></label>
                <input asp-for="Prisoner.PrisonerName" class="form-control" />
                <span asp-validation-for="Prisoner.PrisonerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prisoner.ConvictedCrimes" class="control-label"></label>
                <input asp-for="Prisoner.ConvictedCrimes" class="form-control" />
                <span asp-validation-for="Prisoner.ConvictedCrimes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prisoner.DateOfRelease" class="control-label"></label>
                <input asp-for="Prisoner.DateOfRelease" class="form-control" />
                <span asp-validation-for="Prisoner.DateOfRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Prisoner" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}